{
    "name": "Ruuvitag",
    "version": "0.2.3",
    "slug": "ruuvitag",
    "description": "Atmospheric information from Ruuvitag BLE sensors",
    "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
    "startup": "application",
    "boot": "auto",
    "privileged": [
        "SYS_RAWIO"
    ],
    "homeassistant_api": true,
    "host_network": true,
    "options": {
        "interval": 30,
        "debug": 0,
        "discovery": false,
        "tags": []
    },
    "schema": {
        "interval": "int",
        "debug": "int?",
        "discovery": "bool",
        "tags": [
            {
                "id": "str",
                "name": "str",
                "enabled": "bool",
                "temperature": "bool",
                "pressure": "bool",
                "humidity": "bool",
                "battery": "bool",
                "acceleration": "bool",
                "accelerationX": "bool",
                "accelerationY": "bool",
                "accelerationZ": "bool",
                "interval": "int?",
                "rssi": "bool",
                "equilibrium_vapor_pressure": "bool",
                "absolute_humidity": "bool",
                "air_density": "bool",
                "dew_point": "bool",
                "vapor_pressure_deficit": "bool"
            }
        ]
    }
}
